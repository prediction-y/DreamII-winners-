  <script>
    function changeTheme(themeNum) {
      const root = document.documentElement;

      switch(themeNum) {
        case 1:
          root.style.setProperty('--primary-color', '#4a00e0');
          root.style.setProperty('--secondary-color', '#8e2de2');
          root.style.setProperty('--accent-color', '#ff6b6b');
          break;
        case 2:
          root.style.setProperty('--primary-color', '#11998e');
          root.style.setProperty('--secondary-color', '#38ef7d');
          root.style.setProperty('--accent-color', '#ffb347');
          break;
        case 3:
          root.style.setProperty('--primary-color', '#ff416c');
          root.style.setProperty('--secondary-color', '#ff4b2b');
          root.style.setProperty('--accent-color', '#00d2ff');
          break;
        case 4:
          root.style.setProperty('--primary-color', '#1a2980');
          root.style.setProperty('--secondary-color', '#26d0ce');
          root.style.setProperty('--accent-color', '#f9d423');
          break;
      }
    }

    function showForm() {
      document.getElementById('offer-container').style.display = 'none';
      document.getElementById('form-container').style.display = 'block';
    }

    function hideForm() {
      document.getElementById('form-container').style.display = 'none';
      document.getElementById('offer-container').style.display = 'block';
    }

    function processPayment() {
      const name = document.getElementById('name').value;
      const phone = document.getElementById('phone').value;
      const email = document.getElementById('email').value;
      const dream11Id = document.getElementById('dream11-id').value;

      if (!name || !phone || !email || !dream11Id) {
        alert('Please fill all the fields');
        return;
      }

      // Redirect to UPI payment
      const upiId = "6005973034@ybl";
      const amount = "599";
      const payeeName = "MembershipFee";
      const upiUrl = `upi://pay?pa=${upiId}&pn=${payeeName}&am=${amount}&cu=INR`;
      window.location.href = upiUrl;
    }

    function resetForm() {
      document.getElementById('membership-form').reset();
      document.getElementById('success-message').style.display = 'none';
      document.getElementById('offer-container').style.display = 'block';
    }
  </script>
